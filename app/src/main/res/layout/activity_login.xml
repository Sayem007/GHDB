<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scr_2"
    tools:context="com.sayem.geeknot.ghdb.LoginActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghana Health Database System"
        android:textColor="#ffffff"
        android:textSize="40dp"
        tools:layout_editor_absoluteY="179dp"
        tools:layout_editor_absoluteX="351dp"

        />


    <Button
        android:id="@+id/btn_signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_4"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="540dp"
        tools:layout_editor_absoluteY="465dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="#ffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="526dp"
        tools:layout_editor_absoluteX="625dp" />
    
    <Button
        android:id="@+id/btn_nfc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_4"
        android:text="Sign In with NFC"
        android:textAllCaps="false"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="578dp"
        tools:layout_editor_absoluteX="515dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_3"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="465dp"
        tools:layout_editor_absoluteY="23dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/lg1"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#b0b1b7"
            android:text="GHDB"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="55dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="374dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_vpn_key_black_24dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#b0b1b7"
            android:hint="Password"
            android:padding="10dp"
            android:textColorHint="#8cffffff"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="72dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="281dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_person_outline_black_24dp" />

        <EditText
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#b0b1b7"
            android:hint="Username"
            android:padding="10dp"
            android:textColorHint="#8cffffff"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="72dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scr_3"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:layout_editor_absoluteX="792dp"
        tools:layout_editor_absoluteY="642dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_help_outline_black_24dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Help Needed"
            android:textColor="#ffffff"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_passHelp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/scr_3"
                android:text="Passward Help"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="467dp"
                tools:layout_editor_absoluteY="296dp" />

            <Button
                android:id="@+id/btn_unmHelp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/scr_3"
                android:text="Username Help"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="467dp"
                tools:layout_editor_absoluteY="296dp" />

            <Button
                android:id="@+id/btn_nfcHelp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/scr_3"
                android:text="NFC Help"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="467dp"
                tools:layout_editor_absoluteY="296dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
