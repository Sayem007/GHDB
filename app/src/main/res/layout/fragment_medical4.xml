<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="VACCINATIONS"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*">


            <TableRow

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_weight="1"
                    android:background="#7b879c9a"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:background="#7b879c9a"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

            </TableRow>


            <TableRow

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Tetanus"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <EditText

                    android:layout_weight="1"
                    android:background="#7b879c9a"
                    android:gravity="center"
                    android:padding="10dip"
                    android:hint="Enter"
                    android:textColor="#000000"
                    android:textSize="25dp"/>

                <TextView

                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Meningitis"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <EditText
                    android:layout_weight="1"
                    android:background="#7b879c9a"
                    android:gravity="center"
                    android:padding="10dip"
                    android:hint="Enter"
                    android:textColor="#000000"
                    android:textSize="25dp"/>

            </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Influenza vaccine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Yellow fever"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Zostavax"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Polio"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Other vaccine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Other vaccine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>

        </TableLayout>

            <Button
                android:id="@+id/btn_saveMedi"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Save Inormations"
                android:textSize="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/scr_4"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>