<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:text="Family History"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Were you adopted?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If yes, at what age?"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How is the relationship with your father?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How is the relationship with your mother?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siblings and their ages:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are your parents married?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Did your parents devorce?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If yes, how old were you?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Did your parents remarry?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If yes, how old were you?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who raised you?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where did you grown up?"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family member medical conditions:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family member mental conditions:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treated with medication?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medications"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/scr_4"
                android:layout_marginRight="15dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>