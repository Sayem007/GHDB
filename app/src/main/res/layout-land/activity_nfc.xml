<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/scr_2"
    tools:context="com.sayem.geeknot.ghdb.NFCActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/scr_6"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/lg1"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/scr_6"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghana Health Database System"
                android:textColor="#ffffff"
                android:textSize="30dp"
                />
        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        card_view:cardBackgroundColor="#63ebedec"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/scr_3"
                android:padding="5dp"
                android:text="Swipe Your Badge"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:textStyle="bold"
                />
        </LinearLayout>



    </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_nfc"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            />





    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_noNfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Don't Have a Card"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/scr_4"
            android:padding="10dp"
            android:layout_gravity="bottom|end"/>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
