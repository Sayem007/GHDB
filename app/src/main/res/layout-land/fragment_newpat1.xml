<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Date of Consultation:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Name of Doctor:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Reffered By:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Case Type:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details of Injury or Illness, including Date, Location and Other Details:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details of any Treatment or First Aid already administered:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Patient Registration Details"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="SS Number:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="City:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="State:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ZIP:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile Phone:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>

                    <EditText

                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Home Phone:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Work Phone:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/notes"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Instruction"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Pre-visit instructions and directions provided"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Applicable records and reports acquired"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Appointment date and time confirmed"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Insurance pre-authorization completed(if required)"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"/>

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/scr_4"
                android:layout_marginRight="15dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>