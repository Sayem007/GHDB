<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:text="Current Symptoms(Check All That Apply)"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Anxiety"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Depression"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Hallucinations"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Loss of Interest"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Sleep Changes"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Appetite Issues"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Excessive Energy"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Impulsivity"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Panic Attacks"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Suspiciousness"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Avoidance"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Fatigue"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Irritablity"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Racing Thoughts"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Crying Spells"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Guilt"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Libido Changes"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Risky Activity"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:buttonTint="#ffffff"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="25dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/scr_4"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>