<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/scr_3"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"
                android:text="Authorization"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:text="Printed name of Patient or Authorized Representative"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Signature of Patient or Authorized Representative"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Date"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Signature of witness"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Date"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/scr_3"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"
                android:text="If not signed by the patient, indicate relationship of authorizing person to patient:"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"
                android:text="  Parent or guardian of minor child "
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"
                android:text="  Guardian or conservator of conserved patient"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:buttonTint="#ffffff"
                android:text="  Beneficiary or personal Representative of a deceased individual"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/scr_3"
                android:padding="5dp"
                android:text="@string/notes_release"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:shrinkColumns="*"
                android:stretchColumns="*">


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Initial"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <TextView

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_width="200dp"
                        android:background="#00879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="From"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="To"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_width="200dp"
                        android:background="#00879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Alcohol or Drug Use/Abuse Treatment"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_width="200dp"
                        android:background="#00879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Mental Health Treatment"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText

                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView

                        android:layout_width="200dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="HIV Status or Treatment"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#7b879c9a"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <EditText
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dip"
                        android:hint="Enter"
                        android:singleLine="false"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                </TableRow>

            </TableLayout>


            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="15dp"
                android:background="@drawable/scr_4"
                android:layout_marginTop="15dp"
                android:text="Next"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>