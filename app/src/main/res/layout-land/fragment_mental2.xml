<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/scr_3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Complaint"
                android:textStyle="bold"
                android:background="@drawable/scr_3"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/upcoming"
                android:padding="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is your major complaint?"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Start Date:"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="25sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have you previously suffered from this complaint?"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:padding="5dp"
                        android:background="@drawable/scr_7"/>
                    <EditText
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#b0b1b7"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:textSize="25sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Previous therapist(s) seen for complaint:"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Previous treatment for complaint:"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Aggravating Factors:"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Relieving Factors:"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:background="@drawable/scr_7"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#b0b1b7"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="25sp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/scr_4"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>